@model beltexam2.ViewModels.Login

@{
    ViewData["Title"] = "Login";
    ViewData["NavBar"] = false;
}

<h2>Login</h2>

<form asp-action="Login" class="login-page">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Email_field"></label>
        <div>
            <input asp-for="Email_field" />
            <span asp-validation-for="Email_field" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password_field"></label>
        <div>
            <input asp-for="Password_field" />
            <span asp-validation-for="Password_field" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Login" class="login-button" />
        </div>
    </div>
</form>